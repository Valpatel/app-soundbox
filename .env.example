# Sound Box Configuration
# Copy this to .env and customize as needed

# Server settings
HOST=0.0.0.0
PORT=5309

# Debug mode (enables Flask auto-reload - not recommended for production)
FLASK_DEBUG=false

# =============================================================================
# Open Access Mode - Disable login requirements
# =============================================================================
# When true, anyone can generate/vote/favorite without logging in.
# Rate limits still apply per-IP. Localhost exempt (except MCP-proxied requests).
OPEN_ACCESS_MODE=true

# IP Whitelist - comma-separated IPs that get elevated (creator-tier) limits
# These IPs get: 60 gen/hour, 180s max duration, 20 pending jobs
# Localhost (127.0.0.1, ::1) is always whitelisted automatically.
# Example: IP_WHITELIST=192.168.1.100,10.0.0.5
IP_WHITELIST=

# MCP Server port (for AI agent tool integration)
MCP_PORT=5310

# MCP API key - required for SSE transport authentication (Bearer token).
# stdio transport (local AI agents) is always trusted and doesn't need this.
# Generate one with: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
MCP_API_KEY=

# Backup settings (leave BACKUP_DIR empty to disable backups)
# Retention: 14 days daily, then weekly (Sundays) for 2 more months
BACKUP_DIR=
BACKUP_TIME=03:00
